                    <div class="form-example-wrap">
                        <div class="cmp-tb-hd">
                            <h2>Thêm Tag cho sản phẩm</h2>
                            <p style="color:red"><%=messageerror%></p>
                        </div>
                        <form method="POST" action="./addtag">
                        <div class="form-example-int">
                            <div class="form-group">
                                <label>ID Sản phẩm</label>
                                <div class="nk-int-st">
                                    <input type="text" class="form-control input-sm" placeholder="Nhập ID sản phẩm" name="productid" autocomplete="off" required>
                                </div>
                            </div>
                        </div>
                        <div class="form-example-int">
                                <div class="form-group">
                                    <label>Tag sản phẩm</label>
                                    <div class="nk-int-st">
                                        <input type="text" class="form-control input-sm" placeholder="Nhập tag cho sản phẩm" name="tag" autocomplete="off" required>
                                    </div>
                                </div>
                        </div>
                        <div class="form-example-int mg-t-15">
                            <button class="btn btn-success notika-btn-success">Thêm</button>
                        </div>
                        </form>
                    </div>
                </div>
