<body>
	<header id="header"><!--header-->
		
		<%include headertop%>
		
		<div class="header-middle"><!--header-middle-->
			<div class="container">
				<div class="row">
					<div class="col-sm-4">
						<div class="logo pull-left">
							<a href="/"><img width="125px" src="images/home/logo-2.jpg" alt="" /></a>
						</div>
					</div>
					<div class="col-sm-8">
						<div class="shop-menu pull-right">
							<ul class="nav navbar-nav">
								<li><a href="/login" class="active"><i class="fa fa-sign-in"></i> Đăng nhập</a></li>
							</ul>
						</div>
					</div>
				</div>
			</div>
		</div><!--/header-middle-->
	
		<div class="header-bottom"><!--header-bottom-->
			<div class="container">
				<div class="row">
					<div class="col-sm-9">
						<div class="navbar-header">
							<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
								<span class="sr-only">Toggle navigation</span>
								<span class="icon-bar"></span>
								<span class="icon-bar"></span>
								<span class="icon-bar"></span>
							</button>
						</div>
						<div class="mainmenu pull-left">
							<ul class="nav navbar-nav collapse navbar-collapse">
								<li><a href="/">Trang chủ</a></li>
								<li class="dropdown"><a href="/category?id=1">Bóng rổ<i class="fa fa-angle-down"></i></a>
                                    <ul role="menu" class="sub-menu">
                                        <li><a href="shop.html">Giày</a></li>
										<li><a href="checkout.html">Áo đấu</a></li> 
										<li><a href="cart.html">Phụ kiện khác</a></li> 
                                    </ul>
								</li>
								<li class="dropdown"><a href="#">Bóng đá<i class="fa fa-angle-down"></i></a>
                                    <ul role="menu" class="sub-menu">
                                        <li><a href="shop.html">Giày</a></li>
										<li><a href="checkout.html">Áo đấu</a></li> 
										<li><a href="cart.html">Phụ kiện khác</a></li> 
                                    </ul>
                                </li> 
								<li><a href="contact-us.html">Về chúng tôi</a></li>
							</ul>
						</div>
					</div>
					<div class="col-sm-3">
						<div class="search_box pull-right">
							<input type="text" placeholder="Search"/>
						</div>
					</div>
				</div>
			</div>
		</div><!--/header-bottom-->
	</header><!--/header-->
	
	<section id="form"><!--form-->
		<div class="container">
			<div class="row">
				<div class="col-sm-4 col-sm-offset-1">
					<div class="login-form"><!--login form-->
						<h2>Đăng nhập vào tài khoản của bạn!</h2>
						<form name="LoginForm" action="" method="POST">
							<input type="text" name="username" placeholder="Tên tài khoản" autocomplete="off" minlength="6" maxlength="30" pattern="[^\s]+" required/>
							<input type="password" name="password" placeholder="Mật khẩu" autocomplete="off" maxlength="30" required/>
							<div class="err-msg"><%=message%></div>
							<button type="submit" class="btn btn-default">Đăng nhập</button>
						</form>
					</div><!--/login form-->
				</div>
				<div class="col-sm-1">
					<h2 class="or">OR</h2>
				</div>
				<div class="col-sm-4">
					<div class="signup-form"><!--sign up form-->
						<h2>Chưa có tài khoản? Đăng ký mới</h2>
						<form name="RegisterForm" action="/register" method="POST">
							<input type="text" name="newusername" placeholder="Tên tài khoản" autocomplete="off" minlength="6" maxlength="30" pattern="[^\s]+" required/>
							<input type="text" name="fullname" placeholder="Họ tên" autocomplete="off" minlength="6" maxlength="30" required/>
							<input type="password" name="newpassword" placeholder="Mật khẩu" autocomplete="off" maxlength="30" required/>
							<input type="password" name="newpasswordagain" placeholder="Nhập lại mật khẩu" autocomplete="off" required/>
							<input type="text" name="address" placeholder="Nhập địa chỉ" autocomplete="off" required/>
							<input type="number" name="phone" placeholder="Nhập số điện thoại" max="9999999999" autocomplete="off" required/>
							<input type="email" name="email" placeholder="Nhập địa chỉ email" autocomplete="off" required/>
							<div class="err-msg"><%=regmessage%></div>
							<button type="submit" class="btn btn-default">Đăng ký</button>
						</form>
					</div><!--/sign up form-->
				</div>
			</div>
		</div>
	</section><!--/form-->
	
	<% include footer %>
	
    <script src="js/jquery.js"></script>
	<script src="js/price-range.js"></script>
